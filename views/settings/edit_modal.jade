extends ../layout

block content
  .modal(ng-controller="settingsEditCtrl")
    h1.text.center 設定

    .settings-group
      h3 ユーザ設定
      .row
        label 名前
        input(type="text", ng-model="user.name")

      .row
        label メールアドレス
        input(type="text", ng-model="user.email")

    .settings-group
      h3 アプリ設定
      .row
        label プロジェクト保存先
        input(type="text", ng-model="workspace")

    input(type="submit" value="保存" ng-click="save()")
